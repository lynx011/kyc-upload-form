<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UploadFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="20dp"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:ignore="UselessParent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize,UselessParent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:outlineSpotShadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view1"
                    android:layout_width="110dp"
                    android:layout_height="6dp"
                    android:background="#979797"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:outlineSpotShadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view2"
                    android:layout_width="110dp"
                    android:layout_height="6dp"
                    android:background="#979797"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:outlineSpotShadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view3"
                    android:layout_width="110dp"
                    android:layout_height="6dp"
                    android:background="#979797"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.02"
            android:text="@string/upload_document"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
        <FrameLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/selfieClose"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="36dp"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="250dp"
                android:backgroundTint="@color/red">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/close_24"
                    app:tint="@color/white"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/selfiePhotoLayout"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selfie Photo"
                    android:paddingVertical="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.02"
                    app:drawableTint="@color/green"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/check_24"
                    tools:ignore="HardcodedText" />
                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="4dp"
                    android:elevation="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/selfieImg"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:src="@drawable/img"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/selfieCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:outlineSpotShadowColor="@color/white"
                app:cardCornerRadius="6dp"
                android:background="@drawable/card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="18dp"
                        android:src="@drawable/camera_24"
                        tools:ignore="ContentDescription"
                        app:tint="#979797" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selfie Photo"
                        android:layout_marginStart="14dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:letterSpacing="0.02"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/frontClose"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="250dp"
                android:backgroundTint="@color/red">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/close_24"
                    app:tint="@color/white"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/frontPhotoLayout"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NRC Front"
                    android:paddingVertical="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.02"
                    app:drawableTint="@color/green"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/check_24"
                    tools:ignore="HardcodedText" />
                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="4dp"
                    android:elevation="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/frontImg"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:src="@drawable/img"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/frontCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:outlineSpotShadowColor="@color/white"
                app:cardCornerRadius="6dp"
                android:background="@drawable/card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/camera_24"
                        tools:ignore="ContentDescription"
                        app:tint="#979797" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NRC Front"
                        android:layout_marginStart="14dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:letterSpacing="0.02"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/backClose"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="28dp"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="250dp"
                android:backgroundTint="@color/red">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/close_24"
                    app:tint="@color/white"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/backPhotoLayout"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NRC Back"
                    android:paddingVertical="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.02"
                    app:drawableTint="@color/green"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/check_24"
                    tools:ignore="HardcodedText" />
                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="4dp"
                    android:elevation="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/backImg"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:src="@drawable/img"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/backCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:outlineSpotShadowColor="@color/white"
                app:cardCornerRadius="6dp"
                android:background="@drawable/card_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/camera_24"
                        tools:ignore="ContentDescription"
                        app:tint="#979797" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NRC Back"
                        android:layout_marginStart="14dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:letterSpacing="0.02"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminder_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="4dp"
            app:hintTextColor="@color/red"
            app:hintEnabled="true"
            app:boxStrokeWidth="0dp"
            app:endIconDrawable="@drawable/drop_down_24"
            app:boxBackgroundColor="@color/white"
            app:hintAnimationEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="HardcodedText">
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/dropDownCard"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_bg"
                android:inputType="none"
                android:text="Select Documents"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false"
                android:saveEnabled="true"
                android:drawableEnd="@drawable/drop_down_24"
                android:paddingStart="14dp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/documentFront"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="4dp"
            android:outlineSpotShadowColor="@color/white"
            app:cardCornerRadius="6dp"
            android:background="@drawable/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/camera_24"
                    tools:ignore="ContentDescription"
                    app:tint="#979797" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Front"
                    android:layout_marginStart="14dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:letterSpacing="0.02"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/documentBack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:outlineSpotShadowColor="@color/white"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/camera_24"
                    tools:ignore="ContentDescription"
                    app:tint="#979797" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Back"
                    android:layout_marginStart="14dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:letterSpacing="0.02"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp"
                android:layout_marginVertical="12dp"
                android:layout_gravity="center"
                tools:ignore="NestedWeights">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_bg"
                    android:text="Back"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:strokeColor="@color/red"
                    app:backgroundTint="@color/white"
                    app:strokeWidth="2dp"
                    app:textAllCaps="false"
                    tools:ignore="HardcodedText,NestedWeights" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/next"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/card_bg"
                    android:enabled="true"
                    android:text="Next"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/red"
                    app:strokeWidth="2dp"
                    app:textAllCaps="false"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>